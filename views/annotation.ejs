<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
      <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>

      <style>
        .col .s12 > button {
          width: 100%;
        }      
      </style>
  </head>
  <body>
    <section class="row">
      <form action="/annotation" method="post" class="col s12 l8 offset-l2">
        <div class="input-field col s12 l12">
          <input type="text" name="title" id="title" class="validate" value="">  
          <label for="description">Título</label>
        </div>        
        <div class="input-field col s12 l12">
          <textarea type="text" name="description" id="description" class="materialize-textarea" value=""></textarea>
          <label for="description">Descrição</label>
        </div>
        <div class="col s12 l4 m4">
          <button class="btn waves-effect waves-light" type="submit" name="action">Adicionar
            <i class="material-icons right">done</i>
          </button>  
        </div>
      </form>
    </section>
    <section class="row">
      <div class="col s12 l8 offset-l2">
        <ul id="lista" class="collection" >
          <% for (var i = 0; i < annotations.length; i++) { %>
            <li class="collection-item">
              <span><%= annotations[i].title %></span>
              <a href="#!" class="secondary-content"><i class="material-icons">delete</i></a>
              <a href="#!" class="secondary-content"><i class="material-icons">open_in_new</i></a>
              <!--<div class="collapsible-body">
                <div class="">
                  <div class="">
                    <span>
                      <%= annotations[i].description %>
                    </span>
                  </div>
                  <div class="">
                    <div class="footer-copyright">
                      <a href="./annotation/remove/<%= annotations[i]._id%>" class="waves-effect waves-teal btn-flat text-lighten-4 right">
                        Deletar
                      </a>
                    </div>
                  </div>
                </div>
              </div>-->
              
            </li>
          <% } %>
        </ul>

      </div>
    </section>

      <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
      <script type="text/javascript" src="js/materialize.min.js"></script>
      <script>
        
      </script>
  </body>
</html>